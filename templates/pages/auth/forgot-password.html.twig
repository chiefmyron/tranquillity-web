{% extends 'auth.html.twig' %}

{% block title %}Tranquility - Forgotten password{% endblock %}

{% block content %}
    <h1>Forgotten your password?</h1>
    <p>Don't worry, it happens to us all the time as well. Just enter your email address, and we'll send you instructions on how to reset your password.</p>

    <fieldset>
        {{ form_start(passwordResetForm) }}
            {{ form_widget(passwordResetForm) }}

            <div class="login-block"> 
                <a href="{{ path('auth_login') }}" class="btn">Cancel</a> 
                <button type="submit" class="btn btn-primary pull-right">Reset password</button>
            </div> 
        {{ form_end(passwordResetForm) }}
    </fieldset>
{% endblock %}